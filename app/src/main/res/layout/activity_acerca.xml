<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acerca">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_acerca"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimarioOscuro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/logoperfil_mini">
        <TextView
            android:id="@+id/username_acerca"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="224dp"
            android:layout_marginBottom="19dp"
            android:fontFamily="@font/days_one"
            android:text="User_name"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.48000002" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_marginTop="70dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/days_one"
        android:text="Acerca de:"
        android:textColor="@color/colorPrimario"
        android:textSize="30sp"
        />
        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="480dp"
            app:cardBackgroundColor="@color/colorPrimario"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">
                <LinearLayout
                    android:id="@+id/linearLayout_acerca"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/Imagen_acerca"
                        android:layout_width="110dp"
                        android:src="@drawable/imagen2"
                        android:layout_height="90dp"
                        android:layout_margin="20dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/texto1_acerca"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorTerciario"
                        android:fontFamily="@font/days_one"
                        android:text="Camilo AndrÃ©s Carranza Carvajal"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout_acerca2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0">


                    <TextView
                        android:id="@+id/texto2_acerca"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorTerciario"
                        android:fontFamily="@font/days_one"
                        android:text="Ingenieria de Sistemas"
                        android:textAlignment="center"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout_acerca3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0">


                    <TextView
                        android:id="@+id/texto3_acerca"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorTerciario"
                        android:fontFamily="@font/days_one"
                        android:text="Universidad Nacional de Colombia"
                        android:textAlignment="center"
                        android:textSize="15sp"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/linearLayout_acerca4"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0">


                    <TextView
                        android:id="@+id/texto4_acerca"
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorTerciario"
                        android:fontFamily="@font/days_one"
                        android:text="ccarranzac@unal.edu.co"
                        android:textAlignment="center"
                        android:textSize="15sp"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>