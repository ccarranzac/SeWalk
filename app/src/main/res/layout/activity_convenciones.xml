<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Convenciones">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_convenciones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimarioOscuro"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/logoperfil_mini">
        <TextView
            android:id="@+id/username_convenciones"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="224dp"
            android:layout_marginBottom="19dp"
            android:fontFamily="@font/days_one"
            android:text="User_name"
            android:textColor="#fff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.51"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.48000002" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="70dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/days_one"
            android:text="Convenciones:"
            android:textColor="@color/colorPrimario"
            android:textSize="30sp"
            />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="480dp"
        app:cardBackgroundColor="@color/colorTerciario"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="15dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:id="@+id/linearLayout_convenciones"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:id="@+id/imagen1_convenciones"
                    android:layout_width="0dp"
                    android:src="@drawable/adn1"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/texto1_convenciones"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimario"
                    android:fontFamily="@font/days_one"
                    android:text="Rango de riesgo 0-1"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout_convenciones2"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout_convenciones">

                <ImageView
                    android:id="@+id/imagen2_convenciones"
                    android:layout_width="0dp"
                    android:src="@drawable/adn2"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/texto2_convenciones"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimario"
                    android:fontFamily="@font/days_one"
                    android:text="Rango de riesgo 2-3"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_convenciones3"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout_convenciones2">

                <ImageView
                    android:id="@+id/imagen3_convenciones"
                    android:layout_width="0dp"
                    android:src="@drawable/adn3"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/texto3_convenciones"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimario"
                    android:fontFamily="@font/days_one"
                    android:text="Rango de riesgo 4-5"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_convenciones4"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout_convenciones3">

                <ImageView
                    android:id="@+id/imagen4_convenciones"
                    android:layout_width="0dp"
                    android:src="@drawable/adn4"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/texto4_convenciones"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimario"
                    android:fontFamily="@font/days_one"
                    android:text="Rango de riesgo 6-7"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_convenciones5"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout_convenciones4">

                <ImageView
                    android:id="@+id/imagen5_convenciones"
                    android:layout_width="0dp"
                    android:src="@drawable/adn5"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/texto5_convenciones"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimario"
                    android:fontFamily="@font/days_one"
                    android:text="Rango de riesgo 8-9"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_convenciones6"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:padding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout_convenciones5">

                <ImageView
                    android:id="@+id/imagen6_convenciones"
                    android:layout_width="0dp"
                    android:src="@drawable/yo"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/texto6_convenciones"
                    android:layout_width="140dp"
                    android:layout_height="match_parent"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimario"
                    android:fontFamily="@font/days_one"
                    android:text="Mi ubicación"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>